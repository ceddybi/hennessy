{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["src/**/*"]
}
